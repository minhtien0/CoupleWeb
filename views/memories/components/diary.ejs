</div>

<script>
    // ==================== DIARY SCRIPTS ====================
    function renderDiaries() {
        const container = document.getElementById('diary-entries-list');
        container.innerHTML = '';
        diaries.forEach(d => {
            const card = document.createElement('div');
            card.className = 'diary-entry rounded-2xl p-6 shadow-sm border border-amber-200 memory-card';
            card.innerHTML = `
                <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 bg-rose-100 rounded-full flex items-center justify-center">
                        <span class="text-lg color-blue-500"><i class="fa-solid fa-user-tie"></i></span>
                    </div>
                    <div class="flex-1">
                        <div class="flex items-center space-x-2 mb-2">
                            <h4 class="font-medium text-gray-800">${d.author}</h4>
                            <span class="text-xs text-gray-500">‚Ä¢ ${relativeTime(d.when)}</span>
                        </div>
                        <h5 class="font-medium text-gray-700 mb-2">${d.title}</h5>
                        <p class="text-sm text-gray-600 mb-3 leading-relaxed">${d.content}</p>
                        <div class="flex items-center space-x-3">
                            <button class="flex items-center space-x-1 text-rose-500 hover:text-rose-600">
                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                </svg>
                                <span class="text-xs">02</span>
                            </button>
                            <button class="flex items-center space-x-1 text-gray-400 hover:text-gray-600">
                                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10z"></path>
                                </svg>
                                <span class="text-xs">04</span>
                            </button>
                            <div class="flex -space-x-1">
                                
                            </div>
                        </div>
                    </div>
                </div>
            `;
            container.appendChild(card);
        });

        document.getElementById('stat-posts').textContent = diaries.length;
    }

    async function submitDiary() {
        const payload = {
            title: document.getElementById("diary-title").value,
            content: document.getElementById("diary-content").value,
            date_time: document.getElementById("diary-date").value
        };

        const res = await fetch("/memories/create/diary", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(payload)
        });

        const data = await res.json();

        if (data.success) {
            alert("ƒê√£ th√™m nh·∫≠t k√≠!");
            location.reload();
        } else {
            alert("Th√™m th·∫•t b·∫°i!");
        }

        renderDiaries();
    }

    function writeDiary() {
        const html = `
            <div>
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold">Vi·∫øt nh·∫≠t k√Ω m·ªõi</h3>
                    <button onclick="closeOverlay()" class="text-gray-400">ƒê√≥ng</button>
                </div>
