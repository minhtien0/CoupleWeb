    <!-- Bottom Navigation -->
    <%- include('layouts/footer') %>
        <script>
            // State variables
            let heartPoints = 1250;
            let currentStreak = 12;
            let showingSuggestions = false;

            // Quick suggestions functionality
            function showQuickSuggestions() {
                document.getElementById('quick-decision-content').classList.add('hidden');
                document.getElementById('suggestions-content').classList.remove('hidden');
                showingSuggestions = true;
            }

            function hideQuickSuggestions() {
                document.getElementById('quick-decision-content').classList.remove('hidden');
                document.getElementById('suggestions-content').classList.add('hidden');
                showingSuggestions = false;
            }

            // Bottom navigation functionality
            function switchTab(tabName) {
                // Remove active class from all tabs
                const tabs = document.querySelectorAll('[data-tab]');
                tabs.forEach(tab => {
                    tab.classList.remove('text-rose-600', 'bg-rose-50');
                    tab.classList.add('text-gray-400', 'hover:text-gray-600');
                    const svg = tab.querySelector('svg');
                    svg.classList.remove('fill-rose-600');
                });

                // Add active class to selected tab
                const activeTab = document.querySelector(`[data-tab="${tabName}"]`);
                activeTab.classList.remove('text-gray-400', 'hover:text-gray-600');
                activeTab.classList.add('text-rose-600', 'bg-rose-50');
                const activeSvg = activeTab.querySelector('svg');
                if (tabName === 'Home') {
                    activeSvg.classList.add('fill-rose-600');
                }
            }

            // Add event listeners for bottom navigation
            document.addEventListener('DOMContentLoaded', function() {
                const tabs = document.querySelectorAll('[data-tab]');
                tabs.forEach(tab => {
                    tab.addEventListener('click', () => {
                        switchTab(tab.dataset.tab);
                    });
                });

                // Update progress ring
                const progressBar = document.querySelector('.progress-bar');
                const progressPercentage = (currentStreak / 30) * 100;
                progressBar.style.setProperty('--progress', progressPercentage);

                // Update days remaining
                document.getElementById('days-remaining').textContent = `${30 - currentStreak} ng√†y`;
            });

            // Add hover effects for suggestion items
            document.addEventListener('DOMContentLoaded', function() {
                const suggestionItems = document.querySelectorAll('#suggestions-content > div');
                suggestionItems.forEach(item => {
                    item.addEventListener('click', function() {
                        // Add click feedback
                        this.classList.add('scale-95');
                        setTimeout(() => {
                            this.classList.remove('scale-95');
                            hideQuickSuggestions();
                        }, 150);
                    });
                });
            });
        </script>
</body>

