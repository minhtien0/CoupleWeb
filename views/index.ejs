            <script>
                async function handleCheckIn() {
                    const messageBox = document.getElementById("checkin-message");
                    messageBox.innerHTML = "‚è≥ ƒêang x·ª≠ l√Ω...";

                    try {
                        const res = await fetch("/home/checkin", {
